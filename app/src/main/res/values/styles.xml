<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppAlertTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColorPrimary">@color/colorTransparent</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:popupBackground">@null</item>
    </style>


    <style name="AppAlertTheme19" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textColorPrimary">@color/colorTransparent</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:popupBackground">@null</item>
    </style>

    <style name="TvReg">
        <item name="android:textColor">@color/colorRegTexts</item>
        <item name="android:textSize">@dimen/size_tv_reg</item>
        <item name="we_ctvTxtColor">@color/colorRegTexts</item>
        <item name="weTvTypeface">we_regular</item>
    </style>

    <style name="Tiet">
        <item name="android:textColor">@color/colorRegTexts</item>
        <item name="android:textSize">@dimen/size_tv_reg</item>
        <item name="android:textColorHint">@color/colorHintEtxt</item>
    </style>

</resources>
